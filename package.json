{
  "name": "safe-rpc-iframe",
  "version": "0.1.7",
  "description": "Safe and easy cross-domain iframe communication",
  "repository": "OpenAssetStandards/safe-rpc",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      }
    },
    "./child": {
      "types": "./dist/child.d.ts",
      "import": "./dist/child.mjs",
      "require": "./dist/child.cjs"
    },
    "./parent": {
      "types": "./dist/parent.d.ts",
      "import": "./dist/parent.mjs",
      "require": "./dist/parent.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "child.d.ts",
    "parent.d.ts"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "jest",
    "lint": "prettier -c src test",
    "lint:fix": "eslint --fix --ext .ts . && prettier -w src test",
    "prepack": "pnpm build",
    "release": "pnpm test && npm publish && git push --follow-tags",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1"
  },
  "packageManager": "pnpm@8.4.0",
  "peerDependencies": {
    "safe-rpc": "^0.1.7"
  }
}
